programa {
  funcao inicio() {
    inteiro op

    escreva("Menu de Opções, escolha uma opção: \n")
    escreva("0 - Somar \n")
    escreva("1 - Multiplicar \n")
    escreva("2 - Dividir \n")
    leia(op)

    escolha(op){
     caso 1: 
      escreva("Você escolheu somar")
     pare

     caso 2:
       escreva("Você escolheu multiplicar")
     pare

     caso 3:
       escreva("Você escolheu dividir")
     pare

     caso contrario:
       escreva("Opção inválida")
    }

    
  }
}
